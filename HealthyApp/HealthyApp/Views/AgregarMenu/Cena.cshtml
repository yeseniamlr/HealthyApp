@model List<HealthyApp.ViewModel.AgregarMenu>

@{
    ViewBag.Title = "Cena";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Paciente</title>
    <link rel="stylesheet" href="paciente.css">
    <link href="~/Content/Styles/css/paciente.css" rel="stylesheet" />
</head>
<body>
    <center><h2>Cena</h2></center>

    @using (Html.BeginForm("Cena", "AgregarMenu", FormMethod.Post))
    {
        
    <fieldset>

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @if (ViewBag.Message != null)
        {
            <div style="border:1px solid red">
                @ViewBag.Message

            </div>
        }
        <div id="desa">
            <table class="table table-striped">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => Model[i].Descripcion)
                        </td>
                        <td>
                            @Html.EditorFor(m => Model[i].isSelected, null, Model[i].ID)
                        </td>
                    </tr>
                    @Html.HiddenFor(m => Model[i].ID, Model[i].ID)
                    @Html.HiddenFor(m => Model[i].menuID, Model[i].menuID)
                    @Html.HiddenFor(m => Model[i].tiempoID, Model[i].tiempoID)
                    @Html.HiddenFor(m => Model[i].diaID, Model[i].diaID)


                }
            </table>
        </div>
        <center>
            <button type="button" onclick="location.href='@Url.Action("Snack2","AgregarMenu",new {id=Model[0].menuID, dia=Model[0].diaID})'" class="button">
                Anterior

            </button>
            <button type="submit" class="button">Finalizar</button>




        </center>
    </fieldset>

    }

</body>
</html>

