@model List<HealthyApp.ViewModel.AgregarMenu>

@{
    ViewBag.Title = "Snack2";
}

<h2>Snack2</h2>

@using (Html.BeginForm("Snack2", "AgregarMenu", FormMethod.Post))
{
    <fieldset>

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @if (ViewBag.Message != null)
        {
            <div style="border:1px solid red">
                @ViewBag.Message

            </div>
        }

        <table class="table table-striped">
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => Model[i].Descripcion)
                    </td>
                    <td>
                        @Html.EditorFor(m => Model[i].isSelected, null, Model[i].ID)
                    </td>
                </tr>
                @Html.HiddenFor(m => Model[i].ID, Model[i].ID)
                @Html.HiddenFor(m => Model[i].menuID, Model[i].menuID)
                @Html.HiddenFor(m => Model[i].tiempoID, Model[i].tiempoID)
                @Html.HiddenFor(m => Model[i].diaID, Model[i].diaID)


            }
        </table>

        <center>
            <button type="button" onclick="location.href='@Url.Action("Comida","AgregarMenu",new {id=Model[0].menuID, dia=Model[0].diaID})'">
                Anterior

            </button>
            <button type="submit">Siguiente</button>
            <button type="button" onclick="location.href='@Url.Action("RegresarMenu","AgregarMenu",new {MenuId=Model[0].menuID})'">
                Regresar

            </button>
        </center>
    </fieldset>
}




